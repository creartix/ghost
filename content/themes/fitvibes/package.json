{
    "name": "fitvibes",
    "description": "",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "concurrently \"vite\" \"yarn watch:ghost\"",
        "watch:ghost": "browser-sync start --proxy localhost:2368 --files '**/*.hbs' --no-open --no-notify",
        "build": "vite build"
    },
    "author": {
        "name": "Fitvibes",
        "email": "hello@fitvibes.com",
        "url": "https://fitvibes.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": ""
    },
    "devDependencies": {
        "@tailwindcss/postcss": "4.0.0-alpha.30",
        "@vitejs/plugin-legacy": "^7.2.1",
        "bestzip": "^2.2.1",
        "browser-sync": "^3.0.4",
        "concurrently": "^8.2.0",
        "tailwindcss": "4.0.0-alpha.30",
        "vite": "^7.1.11"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module",
    "dependencies": {
        "caniuse-lite": "^1.0.30001751"
    }
}
