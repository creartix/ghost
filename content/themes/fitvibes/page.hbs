{{!< default}}

{{#post}}

    <div class="max-w-5xl mx-auto px-8 py-12 text-center">
        <h1 class="font-headline font-light text-xl text-black leading-tight md:text-2xl lg:text-6xl dark:text-white">
            <span class="font-semibold">{{title}}</span>
        </h1>
    </div>

    <section class="m-12 px-8">

        <div class="max-w-5xl mx-auto">

            <article class="gh-article {{post_class}}">

                {{#if custom_excerpt}}
                <p class="text-xl text-black dark:text-neutral-200">{{custom_excerpt}}</p>
                {{/if}}

                {{#match @page.show_title_and_feature_image}}
                <figure class="max-w-7xl mx-auto my-10">
                    {{> picture src=feature_image alt=feature_image_alt sizes="(min-width: 1200px) 1200px, 100vw"
                    class="aspect-video block w-full rounded-2xl overflow-hidden" width="1200" height="630" }}
                    {{#if feature_image_caption}}
                    <figcaption class="text-xs mt-2">
                        {{feature_image_caption}}
                    </figcaption>
                    {{/if}}
                </figure>
                {{/match}}

                <div class="post-content gh-canvas my-16">
                    {{content}}
                </div>

            </article>

        </div>

    </section>

{{/post}}